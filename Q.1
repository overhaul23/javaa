import java.util.Scanner;

class BankAccount {
    Scanner sc = new Scanner(System.in);
    String name, type, accNo;
    int balanceAmt;

    void getDetails() {
        System.out.print("Enter the name of Depositor: ");
        name = sc.next();

        System.out.print("Enter the Account number: ");
        accNo = sc.next();

        System.out.print("Enter the Type of Account: ");
        type = sc.next();

        System.out.print("Enter the balance amount in the account: ");
        balanceAmt = sc.nextInt();
    }

    void deposit() {
        System.out.print("Enter the amount to be deposited: ");
        int depositAmt = sc.nextInt();
        balanceAmt = balanceAmt + depositAmt;
        System.out.println("After Depositing, the amount is: " + balanceAmt);
    }

    void withdraw() {
        System.out.print("Enter the amount to be withdrawn: ");
        int withdrawAmt = sc.nextInt();
        balanceAmt = balanceAmt - withdrawAmt;
        System.out.println("After Withdrawing, the amount is: " + balanceAmt);
    }

    void displayMyName() {
        System.out.println("\nMy Name is Aadesh");
    }
}

class BankDetails {
    public static void main(String[] args) {
        BankAccount W1 = new BankAccount();
        W1.getDetails();
        W1.deposit();
        W1.withdraw();
        W1.displayMyName();
    }
}

