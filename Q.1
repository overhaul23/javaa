import java.util.Scanner;

class Student {
    Scanner sc = new Scanner(System.in);
    int ID, creditHours, pointsEarned;
    double gpa;

    void inputDetails() {
        System.out.print("Enter ID number: ");
        ID = sc.nextInt();

        System.out.print("Enter credit hours: ");
        creditHours = sc.nextInt();

        System.out.print("Enter points earned: ");
        pointsEarned = sc.nextInt();
    }

    void calculateGpa() {
        if (creditHours != 0) {
            gpa = (double) pointsEarned / creditHours;
        } else {
            gpa = 0.0;
        }
    }

    void display() {
        System.out.println("The Grade Point Average of Student is: " + gpa);
        System.out.println("This program was written by: Aadesh");
    }
}

class ShowStudent {
    public static void main(String[] args) {
        Student S1 = new Student();
        S1.inputDetails();
        S1.calculateGpa();
        S1.display();
    }
}






